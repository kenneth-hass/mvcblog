<head>
    <title>MVC Blog</title>
</head>
<body>
    <div class="container mt-4"></div>

    {{#if posts.length}}
    {{#each posts}}

    <div class="card mb-3">

        <div class="card-header bg-white text-black d-flex justify-content-between align-items-center">

            <h5 class="cardTitle mb-0">{{title}}</h5>

            <small class="text-white-50">

                Posted By{{user.username}} on {{formatDate createdAt}}

            </small>

        </div>

        <div class="cardBody">

            <p class="cardText">{{description}}</p>

                <div class="commentsSection mt-3">

                    <br>

                    <h5>Comments:</h5>

                    <div id="comments-{{id}}">

                        {{#each comments}}

                        <div class="comment mb-2">

                            {{content}}-By <strong>{{user.username}}</strong> - <strong>By</strong> {{formatDate createdAt}}
                       
                        </div>

                        {{/each}}

                    </div>

                </div>

    <script src="/public/comment.js"></script>
</body>